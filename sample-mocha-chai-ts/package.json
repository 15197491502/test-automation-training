{
  "name": "sample-mocha-chai-ts",
  "private": true,
  "scripts": {
    "test": "npm run lint && npm run test:unit && npm run test:cover",
    "test:unit": "npx mocha",
    "test:cover": "npx nyc npm run test:unit && npm run test:cover:debug-report",
    "test:cover:debug-report": "npx nyc report --reporter=text-summary && npx nyc report --reporter=text",
    "lint": "npx eslint src test"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^7.0.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "mocha": "^7.2.0",
    "mochawesome": "^6.1.1",
    "nyc": "^15.1.0",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  }
}
